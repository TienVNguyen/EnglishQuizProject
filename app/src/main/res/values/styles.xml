<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPurple</item>
    </style>

    <style name="LinearLayoutInclude" parent="Base.Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
    </style>

    <style name="TextViewBasic" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
        <item name="android:textSize">@dimen/text_view_basic</item>
    </style>

    <style name="TextViewHint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_view_hint</item>
    </style>

    <style name="EditTextBasic" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/edit_text_basic</item>
    </style>

    <style name="RadioGroupBasicHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadioGroupBasicVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButtonBasic" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:textSize">@dimen/radio_text_basic</item>
    </style>

    <style name="CheckBoxBasic" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/checkbox_text_basic</item>
    </style>

    <style name="ButtonBasic" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/checkbox_text_basic</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageViewBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
